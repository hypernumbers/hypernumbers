%%-*-erlang-*-
%% this is a permissions script for creating a new site
%%
{add_view, 
 [{path, []},
  {perms, [everyone]},
  {view, "_g/tiny/tiny"}
 ]}.
{add_view, 
 [{path, []},
  {perms, [{group, "admin"}]},
  {view, "_g/core/spreadsheet"}
 ]}.
{champion,
 [{path, []},
  {view, "_g/tiny/tiny"}
 ]}.


{add_view, 
 [{path, ["request_site"]},
  {perms, [{group, "admin"}]},
  {view, "_g/core/spreadsheet"}
 ]}.
{champion, 
 [{path, ["request_site"]},
  {view, "_g/core/spreadsheet"}
 ]}.


{add_view, 
 [{path, ["_user", "login"]},
  {perms, [everyone]},
  {view, "_g/core/login"}
 ]}.

{add_view, 
 [{path, ["contact"]},
  {perms, [everyone]},
  {view, "_g/tiny/contact"}
 ]}.
{add_view, 
 [{path, ["contact"]},
  {perms, [{group, "admin"}]},
  {view, "_g/core/spreadsheet"}
 ]}.
{champion,
 [{path, ["contact"]},
  {view, "_g/tiny/contact"}
 ]}.
