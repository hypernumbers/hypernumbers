#! /bin/bash

DIR=`pwd`
MODE=""
RELOAD=""

while getopts dr OPTION
do
    case ${OPTION} in 
        d) MODE="-detached";;
        r) RELOAD="-run reloader start";;
       \?) echo "Usage: "
       exit 2;;
    esac
done

erl $MODE \
    $RELOAD \
    -setcookie abc \
    -sname arrian \
    -boot ebin/hypernumbers \
    -config priv/sasl_dev_conf \
    -mnesia dir \"$DIR/data\"
