<hypernumbers>

    <includes>
        <reldir>lib/db_access-1.0/ebin</reldir>
        <reldir>lib/read_excel-1.0/ebin</reldir>
        <reldir>lib/remoting-1.0/ebin</reldir>
        <reldir>lib/utilities-1.0/ebin</reldir>
        <reldir>lib/yaws-1.74/ebin</reldir>
        <reldir>lib/hypernumbers.com-1.0/ebin</reldir>
        <reldir>lib/formula_engine-1.0/ebin</reldir>
        <reldir>lib/parser-1.0/ebin</reldir>
        <reldir>lib/engine-1.0/ebin</reldir>
    </includes>

    <mnesia>
        <data><reldir>priv/data</reldir></data>
    </mnesia>

    <yawsconf>

        <trace>false</trace>
        <yaws_dir><reldir>lib/yaws-1.73</reldir></yaws_dir>
        <log><reldir>priv/log</reldir></log>
        <yaws>Hypernumbers 1.0</yaws>
        <tmpdir>/tmp</tmpdir>

        <servers>
            <group port="9000">      
               
                <server name="127.0.0.1">
                    <listen>127.0.0.1</listen>
                    <docroot><reldir>include/docroot</reldir></docroot>
                    <appmods>
                        <mod path="/" module="spriki" />
                    </appmods>
                </server>

            </group>

            <group port="9001">
                <server name="127.0.0.1">
                    <listen>127.0.0.1</listen>
                    <docroot><reldir>include/docroot/charts</reldir></docroot>
                </server>
            </group>
            
            <group port="9003">
                <server name="127.0.0.1">
                    <auth>
                        <dir>/docs/</dir>
                        <realm>HyperNumbers</realm>
                        <users>include/users.auth</users>
                    </auth>
                    <auth>
                        <dir>/alpha/</dir>
                        <realm>HyperNumbers</realm>
                        <users>include/users.auth</users>
                    </auth>
                    <listen>127.0.0.1</listen>
                    <docroot><reldir>include/hypernumbers.com</reldir></docroot>
                    <appmods>
                        <mod path="/" module="hypernumbers" />
                    </appmods>
                </server>
            </group>

        </servers>
    </yawsconf>
</hypernumbers>