# gets todays logfiles
GrepD=`date -d "1 day ago" +"%d/%b/%Y"`
LogD=`date -d "1 day ago" +"%F"`

# first the blog site
grep $GrepD /var/log/nginx/vixoblog.log >> /hn/Dropbox/Logs/vixo-blog-$LogD.log
grep $GrepD /var/log/nginx/vixoblog.log.1 >> /hn/Dropbox/Logs/vixo-blog-$LogD.log

# now the documentation
grep $GrepD /var/log/nginx/vixodoco.log >> /hn/Dropbox/Logs/vixo-documentation-$LogD.log
grep $GrepD /var/log/nginx/vixodoco.log.1 >> /hn/Dropbox/Logs/vixo-documentation-$LogD.log