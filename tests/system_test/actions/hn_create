%% -*- mode: erlang -*-

%% Targeted Sites
sites() -> ["http://hypernumbers.dev:9000", "http://hypernumbers.dev:9000"].

actions() ->
    LocalUrl = "http://hypernumbers.dev:9000/hn_create/",
    RemUrl  = "http://hypernumbers.dev:9000/hn_create/",
    Type = "application/json",

    %% Put Default values in to be READ from as input to INCOMMING hypernumbers.
    {ok, _} = httpc:request(post, {RemUrl++"A1", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"2600\"}}"}, 
                           [], [], systest),
    {ok, _} = httpc:request(post, {RemUrl++"A2", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"\\\"0xDEADBEAF\\\"\"}}"}, 
                           [], [], systest),
    {ok, _} = httpc:request(post, {RemUrl++"A3", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"false\"}}"}, 
                           [], [], systest),
    {ok, _} = httpc:request(post, {RemUrl++"A4", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"=pi()\"}}"}, 
                           [], [], systest),

    %% Delete existing hypernumbers, and then recreate them.
    {ok, _} = httpc:request(post, {LocalUrl++"C7:C10", [{"Accept", Type}], Type,
                                  "{\"clear\":\"all\"}"},
                           [], [], systest),
    {ok, _} = httpc:request(post, {LocalUrl++"C7", [{"Accept", Type}], Type,
                                  "{\"set\":{\"formula\":\"=HN(\\\"http://hypernumbers.dev:9000/hn_create/a1\\\")\"}}"},
                           [], [], systest),
    {ok, _} = httpc:request(post, {LocalUrl++"C8", [{"Accept", Type}], Type,
                                  "{\"set\":{\"formula\":\"=HN(\\\"http://hypernumbers.dev:9000/hn_create/a2\\\")\"}}"},
                           [], [], systest),
    {ok, _} = httpc:request(post, {LocalUrl++"C9", [{"Accept", Type}], Type,
                                  "{\"set\":{\"formula\":\"=HN(\\\"http://hypernumbers.dev:9000/hn_create/a3\\\")\"}}"},
                           [], [], systest),
    {ok, _} = httpc:request(post, {LocalUrl++"C10", [{"Accept", Type}], Type,
                                  "{\"set\":{\"formula\":\"=HN(\\\"http://hypernumbers.dev:9000/hn_create/a4\\\")\"}}"},
                           [], [], systest).





