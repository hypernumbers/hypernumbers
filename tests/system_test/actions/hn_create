%% -*- mode: erlang -*-

%% Targeted Sites
sites() -> ["http://127.0.0.1:9000", "http://localhost:9000"].

actions() ->
    Url  = "http://localhost:9000/hn_create/",
    Type = "application/json",

    %% Put Default values in to be READ from as input to INCOMMING hypernumbers.
    {ok, _} = http:request(post, {Url++"A1", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"2600\"}}"}, 
                           [], []),
    {ok, _} = http:request(post, {Url++"A2", [{"Accept", Type}], Type, 
                                  "{\"set\":{\"formula\":\"\\\"0xDEADBEAF\\\"\"}}"}, 
                           [], []).
    
