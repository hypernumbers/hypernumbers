%% -*- mode: erlang -*-

%% Targeted Sites
sites() -> ["http://hypernumbers.dev:9000"].

actions() ->
    LocalUrl = "http://hypernumbers.dev:9000/hn_structural/",
    Type = "application/json",

    %% Delete row 2
    {ok, _} = httpc:request(post, {LocalUrl++"2:2", [{"Accept", Type}], Type,
                                  "{\"delete\":\"all\"}"},
                           [], [], systest),

    %% Delete row number 13. 
    {ok, _} = httpc:request(post, {LocalUrl++"13:13", [{"Accept", Type}], Type,
                                  "{\"delete\":\"all\"}"},
                           [], [], systest),

    %% Delete column F
    {ok, _} = httpc:request(post, {LocalUrl++"F:F", [{"Accept", Type}], Type,
                                  "{\"delete\":\"all\"}"},
                           [], [], systest),
    ok.
    
