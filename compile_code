#!/bin/sh

echo "=========================="
echo "COMPILING LEXER AND PARSER"
echo "=========================="
cd ./priv/muin/
erlc generate.erl
erl -noshell -s generate gen -s init stop
cd ../../

echo "==================="
echo "COMPILING COMPILERS"
echo "==================="
erlc -o ebin src/compile_code.erl

echo ""
echo "==============="
echo "COMPILING BUILD"
echo "==============="
cd ebin
erl -pa ebin -noshell -s compile_code -s init stop
